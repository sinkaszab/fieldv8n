{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["ESNext", "ESNext.Array"]
  },
  "exclude": ["node_modules", "src/**/*.test.ts", "src/testUtils.ts"],
  "include": ["src/**/*"]
}
