{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["src/**/*"]
}
